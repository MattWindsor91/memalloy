"ARM8"

include "basic_H.cat"
include "fr.cat"

(* Coherence-after *)
let ca = fr | co

(* Observed-by *)
let obs = rfe | fre | coe

(* Dependency-ordered-before *)
let dob = addr | data
    | ctrl; [W]
    | ((ctrl & isb) | addr; isb); [R]
    | addr; po; [W]
    | (ctrl | data); coi
    | (addr | data); rfi

(* Atomic-ordered-before *)
let aob = atom
    | atom; rfi

(* Barrier-ordered-before *)
let bob = dmb
    | [SCREL]; po; [SCACQ]
    | [R]; dmbld
    | [SCACQ]; po
    | [W]; dmbst; [W]
    | po; [SCREL]
    | po; [SCREL]; coi

(* Ordered-before *)
let ob0 = obs
    | dob
    | aob
    | bob
let ob = ob0+

(* Internal visibility requirement *)
acyclic po-loc | ca | rf as internal

(* External visibility requirement *)
irreflexive ob as external

(* Atomic: Basic LDXR/STXR constraint to forbid intervening writes. *)
empty atom & (fre; coe) as atomic
