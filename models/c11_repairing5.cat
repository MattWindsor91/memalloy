(* Models from paper "Repairing SC in C/C++11" by Lahav et al. *)

"C"
include "c11_base.cat"

(* Allowing further elimination of SC accesses: *)
let rb = [R]; rf^-1; myco
let shsb = (po \ ([W];loc;[W])); hb; (po \ ([R];loc;[R]))
let eco = (rf | myco | rb)+
let fhb = [F];hb
let hbf = hb;[F]
acyclic [SC]; fhb?; (po | shsb | eco); hbf?; [SC] as Srepaired5
